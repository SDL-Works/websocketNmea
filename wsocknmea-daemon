#!/bin/bash
### BEGIN INIT INFO
# Provides:          wsocknmea-daemon
# Required-Start:    $local_fs $remote_fs $syslog $network
# Required-Stop:     $local_fs $remote_fs $syslog $network
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: The NMEA websocket server
# Description:       Enable service provided by wsocknmea
### END INIT INFO

# Author: Erland Hedman <erland@hedmanshome.se>

NAME=wsocknmea
DAEMON=/usr/local/bin/$NAME
OPTIONS="-b"
USER=root
STOP_TIMEOUT=30
ENABLE_DAEMON=1

export PATH="${PATH:+$PATH:}/usr/local/bin"

[ -x $DAEMON ] || exit 0

[ -e /etc/default/$NAME ] && . /etc/default/$NAME


. /lib/lsb/init-functions

start_daemon () {

    [ -x /etc/default/enum-usb ] && /etc/default/enum-usb

    if [ $ENABLE_DAEMON != 1 ]; then
        log_progress_msg "(disabled)"
		log_end_msg 255 || true
    else    
        start-stop-daemon --start \
        --chuid $USER \
		$START_STOP_OPTIONS \
        --exec $DAEMON -- $OPTIONS || log_end_msg $?
		log_end_msg 0
    fi
}

case "$1" in
    start)
        log_daemon_msg "Starting wsserver daemon" "$NAME"
        start_daemon
        ;;
    stop)
        log_daemon_msg "Stopping wsserver daemon" "$NAME"
        start-stop-daemon --stop --quiet \
            --exec $DAEMON --retry $STOP_TIMEOUT \
            --oknodo || log_end_msg $?
        log_end_msg 0
        ;;
    reload)
        log_daemon_msg "Reloading wsserver daemon" "$NAME"
        start-stop-daemon --stop --quiet \
            --exec $DAEMON \
            --oknodo --signal 1 || log_end_msg $?
        log_end_msg 0
        ;;
    restart|force-reload)
        log_daemon_msg "Restarting wsserver daemon" "$NAME"
        start-stop-daemon --stop --quiet \
            --exec $DAEMON --retry $STOP_TIMEOUT \
            --oknodo || log_end_msg $?
        start_daemon
        ;;
    status)
        status_of_proc "$DAEMON" "$NAME" && exit 0 || exit $?
        ;;
    *)
        log_action_msg "Usage: /etc/init.d/$NAME {start|stop|reload|force-reload|restart|status}" || true
        exit 2
        ;;
esac

exit 0

